@page "/"

<PageTitle>Settings</PageTitle>
<MudStack>
    <MudPaper>
            <MudGrid Class="pa-4" Justify="Justify.FlexStart">
                <MudItem md="4">
                <MudSelect T="string" @bind-Value="@lrSelect" Variant="Variant.Outlined" Label="Learning Rate">
                        <MudSelectItem Value="@("0.0005 (Recommended)")"/>                             
                        <MudSelectItem Value="@("0.01")" />
                        <MudSelectItem Value="@("0.001")" />
                        <MudSelectItem Value="@("0.0001")" />
                </MudSelect>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <MudPaper>
        <MudText Class="pa-4" Typo="Typo.subtitle1"> LFP Model </MudText>
            <MudPaper Class="pa-2 ma-2 " Outlined="true" MaxWidth="700px" >
                <MudText>Loads used for model</MudText>
            <MudGrid Class="pa-8" Justify="Justify.FlexStart">
                <MudSwitch @bind-Checked="@Basic_Switch1" Color="Color.Primary" Label="HUFL" />
                <MudSwitch @bind-Checked="@Basic_Switch2" Color="Color.Primary" Label="HULL" />
                <MudSwitch @bind-Checked="@Basic_Switch3" Color="Color.Primary" Label="MUFL"/>
                <MudSwitch @bind-Checked="@Basic_Switch4" Color="Color.Primary" Label="MULL"/>
                <MudSwitch @bind-Checked="@Basic_Switch5" Color="Color.Primary" Label="LUFL"/>
                <MudSwitch @bind-Checked="@Basic_Switch6" Color="Color.Primary" Label="LULL"/>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" @onclick="@(() => reset())"> Reset to Default</MudButton>
            </MudGrid>
            </MudPaper>
            <MudGrid Class="pa-4" Justify="Justify.FlexStart">
                 <MudItem md="4">
                        <MudSelect T="string" Class="pa-4" @bind-Value="@PytorchPeriodSelect" Variant="Variant.Outlined" Label="LFP Model Trainingset Size" > 
                            <MudSelectItem Value="@("1 Month")"/>
                            <MudSelectItem Value="@("3 Months")"/>
                            <MudSelectItem Value="@("6 Months")"/>
                            <MudSelectItem Value="@("1 Yaer (Recommended)")"/>
                        </MudSelect>
                    </MudItem>
                </MudGrid>
    </MudPaper>
    <MudPaper>
        <MudText Class="pa-2" Typo="Typo.subtitle1">DTP Model</MudText>
              <MudGrid Class="pa-4" Justify="Justify.FlexStart">
                <MudItem md="4">

                    <MudSelect T="string" Class="pa-4" @bind-Value="@LinearPeriodSelect" Variant="Variant.Outlined" Label="DTP Model Trainingset Size" > 
                        <MudSelectItem Value="@("1 Week")"/>
                        <MudSelectItem Value="@("1 Month (Recommended)")"/>
                        <MudSelectItem Value="@("2 Months")"/>
                        <MudSelectItem Value="@("3 Months")"/>
                        <MudSelectItem Value="@("4 Months ")"/>
                    </MudSelect>
                </MudItem>
            </MudGrid>
    </MudPaper>

</MudStack>

@code {
    public bool Basic_Switch1 { get; set; } = true;
    public bool Basic_Switch2 { get; set; } = false;
    public bool Basic_Switch3 { get; set; } = true;
    public bool Basic_Switch4 { get; set; } = false;
    public bool Basic_Switch5 { get; set; } = true;
    public bool Basic_Switch6 { get; set; } = false;

    void reset()
    {
        Basic_Switch1 = true;
        Basic_Switch2 = false;
        Basic_Switch3 = true;
        Basic_Switch4 = false;
        Basic_Switch5 = true;
        Basic_Switch6 = false;
    }

    string LinearPeriodSelect = "4 Months (Recommended)";

    string PytorchPeriodSelect = "1 Year (Recommended)";

    string lrSelect = "0.0005 (Recommended)"; 



}
